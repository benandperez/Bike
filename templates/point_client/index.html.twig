{% extends 'base.html.twig' %}

{% block title %}PointClient index{% endblock %}

{% block content %}
<div class="row content">
    <h1>PointClient index</h1>
    <div class="col-12">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Point</th>
                <th>Client</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
            </tr>
        </thead>
        <tbody>
        {% for point_client in point_clients %}
            <tr>
                <td>{{ point_client.id }}</td>
                <td>{{ point_client.point }}</td>
                <td>{{ point_client.client.firstName }}</td>
                <td>{{ point_client.createdAt ? point_client.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ point_client.updatedAt ? point_client.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('point_client_new') }}">Create new</a>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Bike{% endblock %}

{% block content %}
<div class="row content">
    <h1>Bike</h1>

<div class="col-12">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bike.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ bike.description }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ bike.model }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ bike.color }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ bike.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('bike_index') }}">back to list</a>

    <a href="{{ path('bike_edit', {'id': bike.id}) }}">edit</a>

    {{ include('bike/_delete_form.html.twig') }}
</div>
</div>
{% endblock %}
